<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="850" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom, #ffcc99, #ffffff); -fx-padding: 20; -fx-border-color: #ff4500; -fx-border-width: 4px; -fx-border-radius: 10px; -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.kingston.cs.pizzaShopApp.view_controller.PizzaOrderController">

    <Label layoutX="100" layoutY="20" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ff4500;" text="Pizza Customization and Ordering" />

    <Label layoutX="50" layoutY="60" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Customize Your Pizza" />

    <Label layoutX="50" layoutY="100" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Choose Pizza:" />
    <ComboBox fx:id="pizzaSelectionComboBox" layoutX="170.0" layoutY="100.0" prefWidth="250" promptText="Select Pizza" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="50" layoutY="150" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Choose Crust:" />
    <ComboBox fx:id="crustComboBox" layoutX="170.0" layoutY="150.0" prefWidth="250" promptText="Select Crust" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="50" layoutY="200" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Choose Sauce:" />
    <ComboBox fx:id="sauceComboBox" layoutX="170.0" layoutY="200.0" prefWidth="250" promptText="Select Sauce" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="50" layoutY="250" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Choose Cheese:" />
    <ComboBox fx:id="cheeseComboBox" layoutX="180.0" layoutY="250.0" prefWidth="250" promptText="Select Cheese" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="50" layoutY="300" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Choose Toppings:" />
    <VBox fx:id="toppingsVBox" layoutX="230" layoutY="300" spacing="5" style="-fx-padding: 10;" />

    <Label layoutX="50.0" layoutY="490.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Name Your Custom Pizza:" />
    <TextField fx:id="pizzaNameField" layoutX="258.0" layoutY="488.0" prefHeight="28.0" prefWidth="239.0" promptText="Enter pizza name" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="468.0" layoutY="250.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="qty:" />
    <TextField fx:id="qtyField" layoutX="505.0" layoutY="246.0" prefHeight="28.0" prefWidth="67.0" promptText="Enter qty" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Label layoutX="431.0" layoutY="201.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Address:" />
    <TextField fx:id="adrressField" layoutX="505.0" layoutY="198.0" prefHeight="28.0" prefWidth="107.0" promptText="Enter Address:" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 5px;" />

    <Button layoutX="510.0" layoutY="490.0" onAction="#favoritePizza" style="-fx-font-size: 14px; -fx-background-color: #ff4500; -fx-text-fill: white; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-cursor: hand;" text="❤ Favorite" />

    <Label layoutX="50.0" layoutY="530.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Order Summary" />

    <TextArea fx:id="orderReviewTextArea" editable="false" layoutX="170.0" layoutY="570.0" prefHeight="150" prefWidth="400" style="-fx-background-color: #fff5e6; -fx-border-color: #ff4500; -fx-border-radius: 10px; -fx-font-size: 16px;" wrapText="true" />

    <Button layoutX="250.0" layoutY="740.0" onAction="#reviewOrder" prefWidth="150" style="-fx-font-size: 16px; -fx-background-color: #ff8c42; -fx-text-fill: white; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-cursor: hand;" text="🔍 Review" />
    <Button layoutX="420.0" layoutY="740.0" onAction="#submitOrder" prefWidth="150" style="-fx-font-size: 16px; -fx-background-color: #ff4500; -fx-text-fill: white; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-cursor: hand;" text="🛒 Submit" />
</AnchorPane>
