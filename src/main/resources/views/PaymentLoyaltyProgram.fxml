<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="664.0" prefWidth="823.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.kingston.cs.pizzaShopApp.view_controller.PaymentLoyaltyProgramController">
    <VBox alignment="TOP_CENTER" layoutX="8.0" prefHeight="625.0" prefWidth="807.0" spacing="15.0">

        <!-- Title Section -->
        <Label prefHeight="94.0" prefWidth="353.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Payment and Loyalty Program" textAlignment="CENTER" textFill="#e4dede">
            <font>
                <Font size="36.0" />
            </font></Label>

        <HBox prefHeight="498.0" prefWidth="1008.0" spacing="20.0">

            <!-- Payment Section -->
            <VBox prefHeight="498.0" prefWidth="390.0" spacing="10.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #f5f5f5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Payment Details" />

                <Label text="Name on Card" />
                <TextField promptText="Enter your name on the card" />

                <Label text="Card Number" />
                <TextField promptText="1234 5678 9012 3456" />

                <Label text="Expiration Date (MM/YY)" />
                <HBox spacing="10.0">
                    <TextField prefWidth="50.0" promptText="MM" />
                    <TextField prefWidth="50.0" promptText="YY" />
                </HBox>

                <Label text="CVV" />
                <TextField prefWidth="80.0" promptText="123" />

                <Label text="Payment Method" />
                <RadioButton selected="true" text="Credit/Debit Card" />
                <RadioButton text="Digital Wallet (e.g., PayPal)" />

                <Button fx:id="btnCompletePayment" onAction="#btnCompletePayment" style="-fx-background-color: green; -fx-text-fill: white;" text="Complete Payment" />
            </VBox>

            <!-- Loyalty Program Section -->
            <VBox prefHeight="498.0" prefWidth="388.0" spacing="10.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #f5f5f5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Loyalty Program" />

                <Label text="Points Balance" />
                <TextField fx:id="txtPointsBalance" editable="false" style="-fx-background-color: lightyellow;" text="250 Points" />

                <Label text="Redeem Points" />
                <Slider fx:id="sliderRedeemPoints" max="250" min="0" onDragDetected="#updatePointsDeduction" value="0" />
                <Label fx:id="lblDeductedPoints" style="-fx-font-size: 12px;" text="(100 points = $10 discount)" />

                <Label text="Earn Points" />
                <TextField editable="false" style="-fx-background-color: lightyellow;" text="Earn 1 point for every $10 spent" />

                <Button fx:id="btnRedeemPoints" onAction="#btnRedeemPoints" style="-fx-background-color: blue; -fx-text-fill: white;" text="Redeem Points" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
